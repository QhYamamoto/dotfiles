#!/bin/zsh

dotfiles() {
  local command=$1

  DOTFILES_DIR="$HOME/dotfiles"

  case "$command" in
    init)
      bash "$DOTFILES_DIR/init.sh"
      ;;
    update)
      bash "$DOTFILES_DIR/update.sh"
      ;;
    git)
      bash "$DOTFILES_DIR/bash/_setup_git.sh"
      ;;
    *)
      echo "Unknown command: $command"
      exit 1
      ;;
  esac
}

dotfiles $@
